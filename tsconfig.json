{
  "compilerOptions": {
    "target": "ES5",
    "module": "system",
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "noEmitHelpers": false,
    "allowSyntheticDefaultImports": true,
    "sourceMap": true,
    "noResolve": false,
    "outDir": "www/components"
  },
  "include": [
    "src/components/**/*.ts",//,
    "www/jspm_packages/**/*.d.ts"
    //"www/**/*.ts"
    //"!node_modules/**/*"
  ],
  "exclude":[
    "node_modules",
    "src/components/**/*.specs.ts"
  ],
  // "exclude": [
  //   "config",
  //   "coverage",
  //   "gulp",
  //   "hooks",
  //   "platforms",
  //   "resources",
  //   "plugins",
  //   "bower_components",
  //   "node_modules",
  //   ".vscode",
  //   "typings/global",
  //   "typings/global.d.ts"
  // ],
  "compileOnSave": true,
  "buildOnSave": false
}

