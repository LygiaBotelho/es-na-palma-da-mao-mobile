{
  "compilerOptions": {
    "target": "ES5",
    "module": "system",
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "noEmitHelpers": false,
    "allowSyntheticDefaultImports": true,
    "sourceMap": true,
    "noResolve": false,
    "outDir": "www/components"
  },
  "filesGlob": [
    ".src/components/**/*.ts",
     "!node_modules/**/*"
  ],
  "files": [
    "src/components/app.d.ts"
  ],
  "exclude": [
    "config",
    "coverage",
    "gulp",
    "hooks",
    "platforms",
    "resources",
    "plugins",
    "node_modules",
    ".vscode",
    "typings/global",
    "typings/global.d.ts"
  ],
  "compileOnSave": false,
  "buildOnSave": false
}

