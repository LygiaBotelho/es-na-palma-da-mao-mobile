{
  "compilerOptions": {
    "target": "ES5",
    "module": "commonjs",
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "noEmitHelpers": false,
    "allowSyntheticDefaultImports": true,
    "sourceMap": true,
    "noResolve": false,
    "outDir": "www/components",
    "strictNullChecks": true,
    "noUnusedParameters": false,
    "noUnusedLocals": true,
    "moduleResolution": "node",
    "lib": [
      "dom",
      "es6",
      "es2015.promise"
    ]
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "www",
    "config",
    "coverage",
    "gulp",
    "hooks",
    "platforms",
    "resources",
    "plugins",
    "node_modules",
    ".vscode"
  ],
  "compileOnSave": true,
  "buildOnSave": true
}